{ "manifest_version": 2
, "name": "NicoRF"
, "version": "1.8.0"
, "description": "ニコニコ動画ランキングで投稿者を表示したりする拡張。"

, "icons":
    { "16": "icons/16.png"
    , "48": "icons/48.png"
    , "128": "icons/128.png"
    }

, "permissions":
    [ "storage"
    , "unlimitedStorage"
    , "http://ext.nicovideo.jp/*"
    , "https://ext.nicovideo.jp/*"
    , "https://cors-anywhere.herokuapp.com/*"
    ]

, "content_scripts":
    [
        { "matches": [
            "https://www.nicovideo.jp/ranking/*"
            , "http://www.nicovideo.jp/ranking/*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/script.js", "js/ranking.js"]
        }
    ,   { "matches": [
            "https://live.nicovideo.jp/ranking*"
            , "http://live.nicovideo.jp/ranking*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/liveranking.js"]
        , "css": ["css/liveranking.css"]
        }
    ,   { "matches": [
            "https://www.nicovideo.jp/tag/*"
            , "http://www.nicovideo.jp/tag/*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/script.js", "js/tag.js"]
        , "css": ["css/tag.css"]
        }
    ,   { "matches": [
            "https://www.nicovideo.jp/search/*"
            , "http://www.nicovideo.jp/search/*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/script.js", "js/tag.js"]
        , "css": ["css/tag.css"]
        }
    ,   { "matches": [
            "https://www.nicovideo.jp/user/*"
            , "http://www.nicovideo.jp/user/*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/user.js"]
        }
    ,   { "matches": [
            "https://www.nicovideo.jp/watch/*"
            , "http://www.nicovideo.jp/watch/*"
          ]
        , "js": ["js/vendor/jquery.min.js", "js/watch.js"]
        }
    ]
}
